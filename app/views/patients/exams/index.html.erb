<div class="container mt-16 md:mt-0">
  <h2>Exames</h2>

  <div class="mt-10">
    <% if @exams.any? %>
      <%= fudgeball_button "Novo exame", url: new_patient_exam_path(@patient) if current_user.doctor? %>
      <%= render "patients/exams/index/exams", exams: @exams %>
    <% else %>
      <p class="text-center mt-5">Não há exames para mostrar</p>
      <div class="mt-5 flex justify-center">
        <%= fudgeball_button "Novo exame", url: new_patient_exam_path(@patient) if current_user.doctor? %>
      </div>
    <% end %>
  </div>
</div>
