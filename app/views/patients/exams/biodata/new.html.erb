<div class="container">
  <div class="w-6/12 mx-auto">
    <%= fudgeball_return_button patient_exam_path(@patient, @exam) %>
    <h2>Cadastrar resultados do exame</h2>

    <%= fudgeball_form model: @biodatum, url: patient_exam_biodata_path(@patient, @exam), class: "mt-8" do |form| %>
      <%= fudgeball_form_alert class: "my-4" %>

      <%= form.input :systolic_pressure, :number, autofocus: true, class: "w-full" %>
      <%= form.input :diastolic_pressure, :number, class: "w-full" %>
      <%= form.input :glycemia, :number, class: "w-full" %>
      <%= form.input :heart_rate, :number, class: "w-full" %>
      <%= form.input :cholesterol, :number, class: "w-full" %>
      <%= form.input :triglyceride, :number, class: "w-full" %>
      <%= form.input :creatinine, :number, step: :any, class: "w-full" %>

      <%= form.submit "Cadastrar", class: "mt-8 w-full" %>
    <% end %>
  </div>
</div>
