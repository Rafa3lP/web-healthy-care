<div class="relative mt-8 overflow-x-auto shadow-md sm:rounded-lg">
  <table class="w-full text-base text-left text-gray-500">
    <thead class="text-xs text-gray-700 uppercase bg-blue-100">
      <tr>
        <% biodatum.hash_biodata.keys.each do |key| %>
          <th scope="col" class="px-6 py-3 text-center"><%= t(key, scope: "activerecord.attributes.biodatum") %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50">
        <% biodatum.hash_biodata.values.each do |value| %>
          <td class="px-6 py-4 text-center"><%= value %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
