<div class="container mt-16 md:mt-0">
  <div class="md:w-6/12 mx-auto">
    <%= fudgeball_return_button patient_diagnostics_path(@patient) %>
    <h2>Cadastrar novo diagn√≥stico</h2>

    <%= fudgeball_form model: @diagnostic, url: patient_diagnostics_path(@patient), method: :post, class: "mt-8" do |form| %>
      <%= fudgeball_form_alert class: "my-4" %>

      <%= form.select :disease, { choices: disease_options }, { required: true, class: "w-full" } %>
      <%= form.input :diagnosed_at, :date, autofocus: true, required: true, class: "w-full" %>
      <%= form.input :cured_at, :date, class: "w-full" %>
      <%= form.text_area :related_symptoms, rows: 10, class: "w-full" %>
      <%= form.select :status, {}, { required: true, class: "w-full" } %>

      <%= form.submit "Cadastrar", class: "mt-8 w-full" %>
    <% end %>
  </div>
</div>
