<div class="container mt-16 md:mt-0">
  <%= fudgeball_return_button patient_diagnostic_treatments_path(@patient, @diagnostic) %>
  <div class="md:w-6/12 mx-auto">
    <h2 class="mt-5 md:mt-0">Cadastrar nova receita</h2>

    <%= fudgeball_form model: @prescription, url: patient_diagnostic_prescriptions_path(@patient, @diagnostic), method: :post, class: "mt-8" do |form| %>
      <%= fudgeball_form_alert class: "my-4" %>

      <%= form.input :date, :date, required: true, autofocus: true, class: "w-full" %>
      <%= form.input :medications_count, :number, required: true, class: "w-full" %>
      <%= form.attach_input :file, accept: "image/png, image/jpeg, application/pdf", class: "w-full" %>

      <%= form.submit "Cadastrar", class: "mt-8 w-full" %>
    <% end %>
  </div>
</div>
