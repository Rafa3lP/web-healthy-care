<%= fudgeball_form model: treatment, url: patient_diagnostic_treatment_path(patient, diagnostic, treatment), method: :patch, class: "mt-2" do |form| %>
  <div class="flex items-center">
    <p class="mr-3"><span class="font-bold">Data do fim:</span></p>
    <%= form.input :ended_at, :date, label: false, required: true %>
  </div>

  <div class="flex justify-center mt-4">
    <%= form.submit "Salvar data do fim" %>
  </div>
<% end %>
