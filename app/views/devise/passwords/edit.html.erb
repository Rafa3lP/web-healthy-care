<div class="container flex items-center justify-center">
  <div class="w-3/12">
    <h2>Alterar senha</h2>

    <%= fudgeball_form model: resource, url: password_path(resource_name), method: :patch do |form| %>
      <%= render "shared/error_messages", resource: %>

      <%= form.hidden_field :reset_password_token %>
      <%= form.input :password, :password, autofocus: true, autocomplete: "new-password" %>
      <%= form.input :password_confirmation, :password, autocomplete: "new-password" %>

      <%= form.submit "Alterar senha", class: "mt-5 w-full" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
