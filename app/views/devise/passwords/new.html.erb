<div class="container flex items-center justify-center">
  <div class="w-3/12">
    <h2>Esqueceu sua senha?</h2>

    <%= fudgeball_form model: resource, url: password_path(resource_name), method: :post, class: "mt-8" do |form| %>
      <%= render  shared/error_messages", resource: %>

      <%= form.input :email, :email, label: "E-mail", autofocus: true, autocomplete: "email", class: "w-full" %>

      <%= form.submit "Enviar", class: "mt-5 w-full" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
