<div class="container flex items-center justify-center">
  <div class="w-3/12">
    <h2 class="text-center text-4xl font-semibold text-xl tracking-tight">Entrar</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8" }) do |f| %>
      <div class="field">
        <%= f.label :email, "E-mail" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full" %>
      </div>

      <div class="field mt-4">
        <%= f.label :password, "Senha" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full" %>
      </div>

      <div class="actions mt-5">
        <%= f.submit "Log in", class: "bg-teal-500 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded w-full" %>
      </div>
    <% end %>

    <div class="mt-5">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
